        try:
            # Update status
            self.status_label.config(text=f"Status: {self.core.status}")
            
            # Enable/disable buttons
            if self.core.generation_in_progress:
                self.generate_button.config(state=tk.DISABLED)
                self.save_button.config(state=tk.DISABLED)
            else:
